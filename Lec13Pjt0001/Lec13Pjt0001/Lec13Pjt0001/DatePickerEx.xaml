<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lec13Pjt0001.DatePickerEx">
    <ContentPage.Content>
        <StackLayout Padding="25">
            <!--MinimumDate: 최소 날짜 / MaximumDate:최대날짜 / Date : 디폴트 값  -->
            <DatePicker x:Name="picker1" MinimumDate="01/01/2018" MaximumDate="12/31/2020" Date="01/01/2020"
                        HorizontalOptions="Center" FontAttributes=" Bold" FontSize="35" DateSelected="picker1_DateSelected"/>

            <Label x:Name="label01" Padding="15" FontSize="25" TextColor="#fff" FontAttributes="Bold" BackgroundColor="#000fff"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>